{
  "name": "candlescope-financeboard",
  "version": "2.0.0",
  "description": "Persönliche Finanzverwaltung — Candlescope FinanceBoard",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev":   "electronmon .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron":         "^40.6.0",
    "electron-builder": "^24.13.3",
    "electronmon":      "^2.0.2"
  },
  "build": {
    "appId":       "de.candlescope.financeboard",
    "productName": "Candlescope FinanceBoard",
    "copyright":   "Copyright © 2026",
    "directories": { "output": "dist" },
    "files": ["**/*", "!node_modules/.cache", "!dist/**"],
    "win": {
      "target": "nsis",
      "icon":   "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon":   "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon":   "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Candlescope FinanceBoard"
    }
  }
}